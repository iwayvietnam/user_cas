<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>
    <table>
        <name>*dbprefix*cas_tickets</name>
        <declaration>
            <field>
                <name>service</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>255</length>
            </field>
            <field>
                <name>ticket</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>255</length>
            </field>
            <field>
                <name>uid</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>255</length>
            </field>
            <field>
                <name>valid</name>
                <type>integer</type>
                <default>0</default>
                <notnull>true</notnull>
                <length>1</length>
            </field>
            <field>
                <name>timestamp</name>
                <type>integer</type>
                <default>0</default>
                <notnull>true</notnull>
                <length>4</length>
            </field>

            <index>
                <name>cas_ticket_primary</name>
                <primary>true</primary>
                <unique>true</unique>
                <field>
                    <name>ticket</name>
                </field>
            </index>

            <index>
                <name>cas_ticket_user</name>
                <field>
                    <name>uid</name>
                </field>
             </index>
            <index>
                <name>cas_ticket_valid</name>
                <field>
                    <name>valid</name>
                    <sorting>ascending</sorting>
                </field>
             </index>
            <index>
                <name>cas_ticket_timestamp</name>
                <field>
                    <name>timestamp</name>
                    <sorting>ascending</sorting>
                </field>
             </index>
        </declaration>
    </table>
</database>
